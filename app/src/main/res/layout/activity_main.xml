<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/bg"
        android:layout_width="match_parent"
        android:layout_height="650dp"
        android:background="@drawable/outlined"
        android:outlineSpotShadowColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="30dp"/>

    <Button
        android:id="@+id/btnHal1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Hal 1"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/btnHal2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="@id/btnHal1"
        app:layout_constraintStart_toEndOf="@id/btnHal1"
        app:layout_constraintEnd_toStartOf="@id/btnHal3"
        android:text="Hal 2"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/btnHal3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="25dp"
        app:layout_constraintTop_toTopOf="@id/btnHal2"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Hal 3"
        android:textSize="20sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>